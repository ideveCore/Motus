{
  "id" : "io.github.idevecore.Motus",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "48",
  "sdk" : "org.gnome.Sdk",
  "command" : "motus",
  "finish-args" : [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules" : [
    {
      "name" : "blueprint",
      "buildsystem" : "meson",
      "cleanup" : [
        "*"
      ],
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "tag" : "v0.18.0",
          "commit" : "07c9c9df9cd1b6b4454ecba21ee58211e9144a4b"
        }
      ]
    },
    {
      "name" : "motus",
      "builddir" : true,
      "buildsystem" : "meson",
      "config-opts" : [
        "-Dprofile=default",
        "--libdir=lib"
      ],
      "sources" : [
        {
          "type" : "dir",
          "path" : "."
        }
      ],
      "build-options" : {
        "env" : {}
      }
    }
  ]
}
